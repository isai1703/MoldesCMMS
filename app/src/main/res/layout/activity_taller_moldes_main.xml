<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Taller de Moldes"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btn_solicitudes_recibidas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📋 Solicitudes Recibidas"
            android:background="#FFC107"
            android:textColor="#000000"
            android:padding="16dp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_gestion_moldes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📦 Gestión de Moldes"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_mantenimientos_moldes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔧 Mantenimientos de Moldes"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_herramientas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔨 Herramientas"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_refacciones_taller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚙️ Refacciones"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_estadisticas_taller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📊 Estadísticas y Productividad"
            android:background="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

</ScrollView>
