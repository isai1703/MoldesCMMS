<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sistema CMMS - Moldes"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Gestión de Moldes -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gestión de Moldes"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_moldes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Moldes"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_mantenimientos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mantenimientos"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_solicitudes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Solicitudes de Mantenimiento"
            android:layout_marginBottom="16dp" />

        <!-- Producción -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Producción"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_operadores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gestión de Operadores"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_registro_produccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registro de Producción"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_asignacion_produccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Asignación de Producción"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_requerimientos_insumo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Requerimientos de Insumos"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_preparacion_material"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preparación de Material (Materialistas)"
            android:layout_marginBottom="16dp" />

        <!-- Máquinas y Equipos -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Máquinas y Equipos"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_maquinas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Máquinas"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_refacciones_maquina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Refacciones de Máquinas"
            android:layout_marginBottom="16dp" />

        <!-- Calidad e Inventario -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calidad e Inventario"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_calidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inspecciones de Calidad"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_inventario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inventario y Compras"
            android:layout_marginBottom="16dp" />

        <!-- Compras y Proveedores -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Compras y Proveedores"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_proveedores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proveedores"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

</ScrollView>
