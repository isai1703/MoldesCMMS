<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Información del Insumo"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipo:"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/tv_detail_tipo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Materia Prima"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Artículo:"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/tv_detail_articulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Resina ABS"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cantidad:"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/tv_detail_cantidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100 kg"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción:"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/tv_detail_descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción del insumo"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Información de Solicitud"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Área:"
                            android:textSize="12sp"
                            android:textColor="@android:color/darker_gray" />

                        <TextView
                            android:id="@+id/tv_detail_area"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Producción"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Prioridad:"
                            android:textSize="12sp"
                            android:textColor="@android:color/darker_gray" />

                        <TextView
                            android:id="@+id/tv_detail_prioridad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Alta"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Solicitado por:"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tv_detail_solicitante"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Juan Pérez"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha Requerida:"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/tv_detail_fecha_requerida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="01/01/2024"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estado:"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/tv_detail_estado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pendiente"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:background="@android:color/holo_orange_light"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Detalles Adicionales"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Justificación:"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/tv_detail_justificacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Justificación del requerimiento"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Costo Estimado:"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/tv_detail_costo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$0.00"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_detail_proveedor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Proveedor sugerido: ABC S.A."
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_detail_especificaciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Especificaciones técnicas"
                    android:textSize="14sp"
                    android:visibility="gone" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_aprobar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aprobar Requerimiento"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@android:color/holo_green_dark" />

            <Button
                android:id="@+id/btn_rechazar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rechazar Requerimiento"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@android:color/holo_red_dark" />

            <Button
                android:id="@+id/btn_marcar_comprado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marcar como Comprado"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_marcar_entregado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marcar como Entregado"
                android:backgroundTint="@android:color/holo_purple"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
