<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_registro_fecha"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="01/01/2024 08:00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_registro_turno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matutino"
                android:textSize="14sp"
                android:background="@android:color/holo_blue_light"
                android:padding="4dp"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_registro_piezas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Producidas: 1000"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tv_registro_defectos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Defectuosas: 10"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/holo_red_dark" />

        <TextView
            android:id="@+id/tv_registro_eficiencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eficiencia: 99.0%"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
