<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalle de Solicitud"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tv_detalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:padding="8dp"
            android:background="#F5F5F5"/>

        <LinearLayout
            android:id="@+id/layout_acciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Acciones"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btn_aprobar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âœ“ Aprobar Solicitud"
                android:backgroundTint="@color/success"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_crear_mantenimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ”§ Crear Mantenimiento"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/btn_rechazar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âœ— Rechazar"
                android:backgroundTint="@color/error"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comentarios del Taller"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/et_comentarios_taller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Agregar comentarios"
            android:inputType="textMultiLine"
            android:lines="3"/>

        <Button
            android:id="@+id/btn_guardar_comentarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Comentarios"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</ScrollView>
